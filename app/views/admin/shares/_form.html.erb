<%= form_tag "/admin/shares", class: "admin-shares-form", method: :post do %>
    <div class="form-group">
      <label for="category">类别</label>
      <select id="category" class="form-control">
        <option></option>
        <%= options_for_select @categories %>
      </select>
    </div>
    <div class="form-group">
      <label for="content">内容</label>
      <%= text_area_tag :content, nil, class: "form-control", rows: 6 %>
    </div>
    <%= link_to "提交", 'javascript:void(0);', class: "btn btn-primary pull-right admin-new-shares-submit" %>
<% end %>
