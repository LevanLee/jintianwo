<div class="user-info">
    <div class="close-button" onclick="return Share.closeButton()"><i class="large remove sign icon"></i></div>
    <ul style="list-style: none;">
        <li style="float:left;width: 165px;"><div class="user-name"><%= current_user.username %></div></li>
        <li style="float:left;padding: 10px;"><span class="like-count"><%= current_user.like_count %></span> 赞~</li>
        <li style="float:left;padding: 10px;"><span class="deserve-count"><%= current_user.deserve_count %></span> 你活该~</li>
    </ul>
    <table class="ui basic table">
      <thead>
          <tr>
              <th class="content">内容</th>
              <th>赞</th>
              <th>你活该</th>
          </tr>
      </thead>

      <tbody>
          <% @shares_page.each do |share| %>
              <tr>
                  <td class="content"><%= share.content %></td>
                  <td class="liked"><%= share.liked.size %></td>
                  <td class="deserved"><%= share.deserved.size %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
    <div class="pageaction">
        <div class="ui borderless pagination menu" style="box-shadow:none;float: right;">
            <%= paging %>
        </div>
    </div>
</div>
