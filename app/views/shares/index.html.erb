<div id="background">
  <%= render 'layouts/topbar' %>
  <div id="operation"></div>
  <div class="mark"><h1>今天你发生了什么囧事<br> ？</h1></div>
  <div id="content">
    <div class="title-box ui basic buttons">
        <div class="ui mini button sort-link deserve-sort-link " data-sort-type="deserve">你活该~</div>
        <div class="ui mini button sort-link like-sort-link" data-sort-type="like">赞~</div>
    </div>
    <div class="wrapper">
        <%= render :partial => "article", :collection => @shares, :as => :share %>
    </div>
    <div class="dashboard">
      <div class="part">
        <div class="box" id="categories">
          <h4>类目</h4>
          <div class="ctlabel">
            <div class="ui mini labels">
              <%= content_tag :div, "全部", class: "ui small label sidebar-tag", "data-id" => 0, "data-type" => "all" %>
              <% @categories.each do |category| %>
                <%= content_tag :div, category.name, :class => "ui small label sidebar-tag", "data-id" => category.id, "data-type" => "alone" %>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div id="public-template">
        <%= render partial: 'share_index_template' %>
    </div>
  </div>
</div>

